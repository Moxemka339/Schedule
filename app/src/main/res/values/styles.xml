<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Mark_Checked</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="DatePickerTheme_Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_gravity">center</item>
        <item name="colorAccent">@color/Dark_Theme_Gray</item>                          <!--header background-->
        <item name="android:windowBackground">@color/Dark_Theme_Gray_Dark</item>        <!--calendar background-->
        <item name="colorControlActivated">@color/Mark_Checked</item>                   <!--selected day-->
        <item name="colorControlHighlight">@color/Dark_Theme_Font_Dark</item>           <!--focusable day-->
        <item name="android:textColorPrimary">@color/Dark_Theme_Font_Light</item>       <!--days of the month-->
        <item name="android:textColorSecondary">@color/Dark_Theme_Font_Dark</item>      <!--days of the week-->
        <item name="textColorAlertDialogListItem">@color/Dark_Theme_Font_Light</item>
    </style>

    <style name="AlertDialogTheme_Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/Dark_Theme_Gray</item>
        <item name="android:textColorPrimary">@color/Dark_Theme_Font_Light</item>
        <item name="colorAccent">@color/Dark_Theme_Font_Light</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
    </style>

    <style name="positive">
        <item name="android:textColor">@color/Mark_Checked</item>
        <item name="android:background">@color/Dark_Theme_Gray</item>
    </style>

</resources>
